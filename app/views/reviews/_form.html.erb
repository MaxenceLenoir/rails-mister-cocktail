<div class="review">
<%= simple_form_for(review) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, as: :hidden, input_html: {id: "review_rating"} %>
  <div class="my-3">
    <% 5.times do |index| %>
      <i id="<%= index + 1 %>" class="review-rating far fa-star"></i>
    <% end %>
  </div>
  <%= f.submit class: "btn btn-primary", value: "Submit review" %>
  <% end %>
</div>